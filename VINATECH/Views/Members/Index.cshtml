@model IEnumerable<VINATECH.Models.Member>
@{
    ViewData["Title"] = "Danh sách thành viên";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Thêm thành viên</a>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Tổ chức</th>
            <th>Chức vụ</th>
            <th>Trạng thái</th>
            <th style="width: 180px">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Organization</td>
                <td>@item.Position</td>
                <th>Ảnh</th>
                <td>
                    @{
                        string status = item.Status == 1 ? "Hoạt động" :
                        item.Status == 2 ? "Khóa" : "Chờ duyệt";
                    }
                    <span>@status</span>
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.AvatarPath))
                    {
                        <img src="@item.AvatarPath" style="height: 80px; border-radius: 8px;" />
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Xem</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
