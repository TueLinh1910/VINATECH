@model VINATECH.Models.Member
@{
    ViewData["Title"] = "Sửa thông tin thành viên";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Organization"></label>
        <input asp-for="Organization" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Position"></label>
        <input asp-for="Position" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-select">
            <option value="0">Chờ duyệt</option>
            <option value="1">Hoạt động</option>
            <option value="2">Khóa</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AvatarFile">Ảnh đại diện</label>
        <input asp-for="AvatarFile" class="form-control" type="file" accept="image/*" />
    </div>

    @if (!string.IsNullOrEmpty(Model?.AvatarPath))
    {
        <div class="mb-3">
            <img src="@Model.AvatarPath" alt="Avatar" style="max-height: 150px;" />
        </div>
    }

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
