@model IEnumerable<VINATECH.Models.Member>

@{
    ViewData["Title"] = "Thành viên hiệp hội";
}

<h2 class="text-center mb-4">Danh sách thành viên hiệp hội</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 col-sm-6 mb-4">
            <div class="card shadow-sm border-0">
                <img src="@(!string.IsNullOrEmpty(item.AvatarPath) ? item.AvatarPath : "/images/default-avatar.png")"
                     class="card-img-top"
                     alt="Avatar"
                     style="height:220px; object-fit:cover;" />

                <div class="card-body text-center">
                    <h5 class="card-title">@item.FullName</h5>
                    <p class="text-muted mb-1">@item.Position</p>
                    <p class="text-secondary">@item.Organization</p>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <p class="text-center text-muted">Hiện chưa có thành viên nào được hiển thị.</p>
}
