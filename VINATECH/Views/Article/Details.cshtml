@model VINATECH.Models.Article
@{
    ViewData["Title"] = "Chi tiết bài viết";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="@Model.Title" class="card-img-top" style="max-height:400px; object-fit:cover;" />
        }

        <div class="card-body">
            <h2 class="card-title mb-3">@Model.Title</h2>
            <p class="text-muted">
                📂 <strong>Danh mục:</strong> @Model.Category?.Name |
                🕒 <strong>Ngày đăng:</strong> @Model.PublishDate.ToString("dd/MM/yyyy")
            </p>

            <hr />
            <p class="card-text" style="white-space: pre-line; text-align: justify;">
                @Model.Content
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary mt-3">← Quay lại Trang chủ</a>
        </div>
    </div>
</div>
